/************************************************************************************************
 * START OF SIDE BAR CODE
 ************************************************************************************************/
$(document).ready(function () {
    const $menuItems = $('.menu li.menu-item');


    var ANIMATION_DURATION = 300;
    var $sidebar = $("#sidebar");
    var $SUB_MENU_ELS = $(".menu > ul > .menu-item.sub-menu");
    var FIRST_SUB_MENUS_BTN = $(".menu > ul > .menu-item.sub-menu > a");
    var INNER_SUB_MENUS_BTN = $(".menu > ul > .menu-item.sub-menu .menu-item.sub-menu > a");
    var $main_container = $("#main-container");

    if (localStorage.getItem("sidebar-collapsed") === "true") {
        $sidebar.addClass("sibebar-collapsed");
        $main_container.toggleClass("main-container-no-sidebar");
    }
    function removeMenuHighlights() {
        $('.menu-title').each(function () {
            const $title = $(this);
            $title.html($title.text()); // Reset to plain text
        });
    }

    $('#menuSearchInput').on('keyup', function () {
        let query = $(this).val().trim().toLowerCase();

        // Remove highlights and reset visibility
        removeMenuHighlights();
        $menuItems.removeClass('hidden-by-search');

        if (query === '') {
            // Close only those opened by search
            $('.sub-menu-list.opened-by-menu-search').each(function () {
                slideUp($(this));
                $(this).removeClass('opened-by-menu-search');
            });
            return;
        }

        // Hide all menu items by default
        $menuItems.addClass('hidden-by-search');

        // Loop and show matches
        $menuItems.each(function () {
            const $item = $(this);
            const $title = $item.find('.menu-title').first();
            const rawText = $title.text();
            const lowerText = rawText.toLowerCase();

            if (lowerText.includes(query)) {
                $item.removeClass('hidden-by-search');
                $item.parents('li.menu-item').removeClass('hidden-by-search');

                // Open submenus if needed
                $item.parents('.menu-item.sub-menu').each(function () {
                    const $submenu = $(this).children('.sub-menu-list');
                    if (!$submenu.is(':visible')) {
                        slideDown($submenu);
                        $submenu.addClass('opened-by-menu-search');
                    }
                });

                // Highlight match
                const regex = new RegExp('(' + query + ')', 'ig');
                const highlighted = rawText.replace(regex, '<mark>$1</mark>');
                $title.html(highlighted);
            }
        });
    });

    function PopperObject(reference, popperTarget) {
        var self = this;
        self.reference = reference;
        self.popperTarget = popperTarget;
        self.instance = Popper.createPopper(reference[0], popperTarget[0], {
            placement: "right",
            strategy: "fixed",
            resize: true,
            modifiers: [
                {
                    name: "computeStyles",
                    options: {
                        adaptive: false
                    }
                },
                {
                    name: "flip",
                    options: {
                        fallbackPlacements: ["left", "right"]
                    }
                }
            ]
        });

        $(document).on("click", function (e) {
            self.clicker(e, self.popperTarget, self.reference);
        });

        var ro = new ResizeObserver(function () {
            self.instance.update();
        });
        ro.observe(self.popperTarget[0]);
        ro.observe(self.reference[0]);

        self.clicker = function (event, popperTarget, reference) {
            if (
                $sidebar.hasClass("sibebar-collapsed") &&
                !$.contains(popperTarget[0], event.target) &&
                !$.contains(reference[0], event.target)
            ) {
                self.hide();
            }
        };

        self.hide = function () {
            self.instance.state.elements.popper.style.visibility = "hidden";
        };
    }

    function Poppers() {
        var self = this;
        self.subMenuPoppers = [];

        self.init = function () {
            $SUB_MENU_ELS.each(function () {
                self.subMenuPoppers.push(new PopperObject($(this), $(this).children().last()));
                self.closePoppers();
            });
        };

        self.togglePopper = function (target) {
            if ($(target).css("visibility") === "hidden")
                $(target).css("visibility", "visible");
            else
                $(target).css("visibility", "hidden");
        };

        self.updatePoppers = function () {
            self.subMenuPoppers.forEach(function (item) {
                $(item.instance.state.elements.popper).css("display", "none");
                item.instance.update();
            });
        };

        self.closePoppers = function () {
            self.subMenuPoppers.forEach(function (item) {
                item.hide();
            });
        };

        self.init();
    }

    function slideUp(target, animationDuration = 0) {
        var $target = $(target);
        $target.parent().removeClass("open");
        $target.stop().slideUp(animationDuration);
    }

    function slideDown(target, animationDuration = 0) {
        var $target = $(target);
        $target.parent().addClass("open");
        $target.stop().slideDown(animationDuration);
    }

    function slideToggle(target, animationDuration = 0) {
        var $target = $(target);
        $target.parent().toggleClass("open");
        $target.stop().slideToggle(animationDuration);
    }

    var PoppersInstance = new Poppers();

    function updatePoppersTimeout() {
        setTimeout(function () {
            PoppersInstance.updatePoppers();
        }, ANIMATION_DURATION);
    }

    $("#btn-sidebar-collapse").on("click", function () {
        $sidebar.toggleClass("sibebar-collapsed");
        $main_container.toggleClass("main-container-no-sidebar");
        PoppersInstance.closePoppers();

        if ($sidebar.hasClass("sibebar-collapsed")) {
            localStorage.setItem("sidebar-collapsed", "true");
            FIRST_SUB_MENUS_BTN.each(function () {
                $(this).parent().removeClass("open");
            });
        } else {
            localStorage.setItem("sidebar-collapsed", "false");
        }

        updatePoppersTimeout();
    });

    $("#btn-sidebar-toggle").on("click", function () {
        $sidebar.toggleClass("toggled");
        updatePoppersTimeout();
    });

    $("#sidebar-overlay").on("click", function () {
        $sidebar.toggleClass("toggled");
    });

    $(".menu-item.sub-menu.open").each(function () {
        $(this).children().last().css("display", "block");
    });

    FIRST_SUB_MENUS_BTN.on("click", function () {
        if ($sidebar.hasClass("sibebar-collapsed")) {
            PoppersInstance.closePoppers();
            PoppersInstance.togglePopper($(this).next());
        } else {
            slideToggle($(this).next(), ANIMATION_DURATION);
        }
    });

    INNER_SUB_MENUS_BTN.on("click", function () {
        slideToggle($(this).next(), ANIMATION_DURATION);
    });
});



/************************************************************************************************
* END OF SIDE BAR CODE
************************************************************************************************/


